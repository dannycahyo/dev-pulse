# -- GitHub API ---------------------------------------------------------------
GITHUB_TOKEN=ghp_your_personal_access_token_here
GITHUB_USERNAME=your-github-username

# -- Google Cloud / BigQuery --------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./keys/gcp-service-account.json
GCP_KEY_PATH=./keys

# -- PostgreSQL (shared by Airflow & Metabase) --------------------------------
POSTGRES_USER=devpulse
POSTGRES_PASSWORD=devpulse
POSTGRES_DB=devpulse

# -- Apache Airflow -----------------------------------------------------------
AIRFLOW__CORE__FERNET_KEY=your-fernet-key-here
AIRFLOW__WEBSERVER__SECRET_KEY=your-webserver-secret-key-here
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
